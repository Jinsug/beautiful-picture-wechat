page{
  background-color:white;
  display: flex;
  flex-direction: column;
}

.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content .content-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
}

.content-item .item-left{
  width: 5%;
  display: flex;
  flex-direction: row;
  border-right-style:solid;
  border-width:1rpx;
  border-color:gainsboro;
  padding-top: 20rpx;
}

.item-left .point{
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background: darkorchid;
  position: absolute;
  z-index: 90;
  left: 25rpx;
  top: 24rpx;
}

.content-item .item-right{
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.item-right .created_at{
  font-size: 30rpx;
  color: darkgray;
}

.item-right .right-content{
  width: 90%;
  display: flex;
  flex-direction: column;
}

.content-item .pic-container{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.pic-container .pic{
  border-radius: 15rpx;
  width: 100%;
  box-shadow: 0rpx 0rpx 20rpx 8rpx gainsboro;
}

.content-item .footer{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.footer .footer-item{
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  color: gray;
  justify-content: center;
  align-items: center;
}

.footer .icon{
  width: 40rpx;
  height: 40rpx;
}

.content-item .description{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  z-index: 100;
  bottom: 0rpx;
  background: black;
  color: white;
  background:rgba(2,2,2,0.4);
  padding: 10rpx;
}

.description .description-word{
  padding-bottom: 5rpx;
  font-size: 35rpx;
}

/** 授权按钮 **/
.auth-container{
  position: fixed;
  z-index: 300;
  width: 100%;
  height: 100%;
  background: gray;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background:rgba(2,2,2,0.6);
}

.auth-container .auth-wall{
  background: white;
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15rpx;
}

.auth-wall .auth-tips{
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: gray;
  font-size: 30rpx;
}

.auth-tips image{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}

.auth-button{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #43CD80;
  width: 100%;
  color: white;
  font-size: 35rpx;
  border-radius: 0rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.auth-button .auth-image-container{
  display: flex;
  flex-direction: column;
}

.auth-button image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.power_by{
  color: #D3D3D3;
}



